{
  "name": "fi1a/bitrixrequire",
  "type": "bitrix-d7-module",
  "description": "Модуль 1С-Битрикс \"Обертка composer для установки зависимостей\"",
  "keywords": [],
  "homepage": "https://github.com/fi1a/bitrixrequire",
  "license": "MIT",
  "authors": [
    {
      "name": "Fi1a",
      "email": "support@fi1a.ru"
    }
  ],
  "require": {
    "php": "^7.3 || ^8",
    "composer/composer": "^2.5"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.3",
    "slevomat/coding-standard": "^6.3",
    "squizlabs/php_codesniffer": "^3.5",
    "vlucas/phpdotenv": "^5.2.0",
    "captainhook/captainhook": "^5.4"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "fi1a/installers": true
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Fi1a\\Unit\\BitrixRequire\\": "tests"
    }
  },
  "scripts": {
    "fl:lint": "phpcs --cache=build/cache/phpcs.cache --ignore=tests/autoload.php",
    "fl:phpcbf": "phpcbf --cache=build/cache/phpcs.cache",
    "fl:test:unit:coverage:ci": "phpunit --coverage-clover build/logs/clover.xml",
    "fl:test:unit": "phpunit",
    "fl:check": [
      "@fl:lint",
      "@fl:test:unit"
    ],
    "pre-commit": [
      "@fl:lint"
    ],
    "pre-push": [
      "@fl:test:unit"
    ]
  },
  "scripts-descriptions": {
    "fl:lint": "Проверяет весь исходный код на соответсвие стандартам.",
    "fl:phpcbf": "Поправляет весь исходный код на соответсвие стандартам.",
    "fl:test:unit:coverage:ci": "Запускает все модульные тесты и генериреут отчет покрытия Clover.",
    "fl:test:unit": "Модульное тестирование"
  }
}
